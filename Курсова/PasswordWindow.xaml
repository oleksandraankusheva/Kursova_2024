<Window x:Class="Курсова.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсова"
        mc:Ignorable="d"
        Title="Введіть пароль" Height="200" Width="300">
    <Grid>
        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="18"/>
        <PasswordBox Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="260" FontSize="18"/>
        <Button Content="ОК" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,10,0" Width="75" Click="OKButton_Click" FontSize="18"/>
    </Grid>
</Window>
